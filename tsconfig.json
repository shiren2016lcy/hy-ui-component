{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "./lib/"
  },
  "exclude": ["node_modules", "src/gatsby-theme-docz", "src/mock"],
  "include": ["src/**/*", "src/index.d.ts"]
}
